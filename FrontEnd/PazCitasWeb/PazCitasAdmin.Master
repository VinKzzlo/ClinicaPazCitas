                    <!-- Dropdown del usuario -->
                    <div class="dropdown user-dropdown ms-auto">
                        <button class="btn btn-outline-light dropdown-toggle" type="button"
                            id="btnUsuario" data-bs-toggle="dropdown" aria-expanded="false">
