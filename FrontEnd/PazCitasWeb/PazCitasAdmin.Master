        </div>

        <!-- Contenido principal -->
        <div class="main-content bg-light flex-fill overflow-auto">
            <!-- Barra de usuario -->
            <nav class="navbar navbar-dark navbar-clinica">
                <div class="container-fluid">
                    <!-- Botón colapsar (≥ md) -->
                    <button class="btn btn-outline-light me-3 d-none d-md-inline-flex"
